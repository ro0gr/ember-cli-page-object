{
  "compilerOptions": {
    "lib": ["es6", "dom"],
    "module": "es6",
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "noEmit": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "inlineSourceMap": true,
    "inlineSources": true,
    "baseUrl": ".",
    "downlevelIteration": true,
    "moduleResolution": "node"
  }
}
